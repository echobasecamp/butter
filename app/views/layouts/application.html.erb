<!DOCTYPE html>
<html>
<head>
  <title>Echo Base Camp -- Bacon -V 1.0</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render '/layouts/nav' %>

<% if params[:id] != nil %>
	<% @url = '/user/' + params[:id] %>
	<% if current_page?(@url) %>
 		<img src="/banner.jpg" class="profile-banner">
		<div class="row">
			<div class="col-sm-12" style="background-color: white;" >
				<div class="container">
					<div class="col-sm-3"><%= current_user.username %>
						
					</div>
					<div class="col-sm-6">
						<div class="col-sm-2">POSTS<br /><%= current_user.posts.count %></div>
						<div class="col-sm-2">STALKERS<br /><%= current_user.followers.count %></div>
						<div class="col-sm-8" style="text-align: right; margin-top: 5px;">
							
					   <%= link_to('Edit Profile', edit_user_registration_path) %>
							
						</div>
					</div>
					<div class="col-sm-3">
						
					</div>
				</div>
			</div>
		</div>	
	<% end %>
<% end %>

       <span class="notice"><%= notice %></span>
       <span class="alert"><%= alert %></span>

<div class="container">
    <%= yield %>
</div>
<%= render '/layouts/nav_bottom' %>


</body>
</html>

<div class="row">
    <div class="col-xs-3">
       	<div class="panel panel-default">
         	<div class="panel-body">
             	<div class="row">
					<div class="col-sm-2">
						<img src="/avitar.png" height="100" width="100"></img>
           	  		</div>
			  	</div>
			<div class="row">
				<div class="col-sm-2">
					 <h4><%= current_user.username %></h4>
				</div>
			</div>
			 	<div class="row">
					<div class="col-sm-2">
						<h6>Posts: <%= current_user.posts.count %></h6>
						<h6>Stalkers: <%= current_user.followers.count %></h6>  
				  	</div>
			  	</div>
			</div>
    	</div>
		<div class="panel panel-default">
			<div class="panel-body">
				<p></p>
			</div>
		</div>
    </div>
    <div class="col-xs-6">
		<%= render '/componets/post_form' %><br />
		<div class="panel panel-default post-panel">
         	<div class="panel-body row">
		 		<%= render '/componets/post_ad' %>
       		</div>
		</div>
		 
		 
		<% for @p in @posts %>
		<div class="panel panel-default post-panel">
        	<div class="panel-body row">
				<div class="col-sm-2">
				  	<img src="/avitar.png" height="50" width="50"></img>
				</div>
			<div class="col-sm-10">
				<p class="post-title"><%= User.find(@p.user_id).username %> - 
				<span class="post-creation">  
				<%= link_to(User.find(@p.user_id).username, '/user/' + User.find(@p.user_id).username) %>
				<%= @p.created_at.to_formatted_s(:short) %></span></p>
				<p class="post-content"><%= @p.content %></p>
			</div>

				<div class="col-sm-12">  
					<p class="post-links">
					<img src="/one_up.png" height="25" width="25"></img>
					<img src="/repost.png" height="25" width="25"></img>	
					</p>
				</div>
			</div> 
    	</div>
    	<% end %>
    </div>
    <div class="col-xs-3">
     	<div class="panel panel-default">
        	<div class="panel-body">
				
        	<%= render '/componets/ad_responsive' %>
				 
         	</div>
       	</div>
    </div>
</div>

